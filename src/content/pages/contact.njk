<script>
function check () {
  // (C1) INIT
  var valid = true, error = "", field = "";

  // First Name Check
  field = document.getElementById("firstName");
  error = document.getElementById("firstName-Error");
  if (!field.checkValidity()) {
    valid = false;
    field.classList.add("err");
    error.innerHTML = "Please enter your first name\r\n";
    return false;
  } else {
    field.classList.remove("err");
    error.innerHTML = "";
  }

  // Last Name Check
  field = document.getElementById("lastName");
  error = document.getElementById("lastName-Error");
  if (!field.checkValidity()) {
    valid = false;
    field.classList.add("err");
    error.innerHTML = "Please enter your last name\r\n";
    return false;
  } else {
    field.classList.remove("err");
    error.innerHTML = "";
  }

  // email Check
  field = document.getElementById("email");
  error = document.getElementById("email-Error");
  if (!field.checkValidity()) {
    valid = false;
    field.classList.add("err");
    error.innerHTML = "Enter email format ex: john@email.com\r\n";
    return false;
  } else {
    field.classList.remove("err");
    error.innerHTML = "";
  }

  // (C3) NUMBER
  field = document.getElementById("phone");
  error = document.getElementById("phone-Error");
  if (!field.checkValidity()) {
    valid = false;
    field.classList.add("err");
    error.innerHTML = "Please enter at most 10 numbers.\r\n";
    return false;
  } else {
    field.classList.remove("err");
    error.innerHTML = "";
  }

  // Drop down validation - This does nothing at the moment
  field = document.getElementById("contactMethod");
  error = document.getElementById("contactMethod-Error");
  curSelect = document.getElementById("contactMethod").selectedIndex;
  if (curSelect === "Choose an option") {
    valid = false;
    field.classList.add("err");
    error.innerHTML = "Please choose a contact method\r\n";
    return false;
  } else {
    field.classList.remove("err");
    error.innerHTML = "";
  }

  // (C4) RESULT
  return valid;
}
</script>

<form name="contact" id="contact_form" method="POST" data-netlify="true" action="/thank-you/" onsubmit="return check()" novalidate>
  <p>
    <label>First Name: <input id="firstName" type="text" name="first_name" autocomplete="off" data-contact-form="firstName" required/></label>
    <div id="firstName-Error" class="emsg"></div> 
  </p>
    <p>
    <label>Last Name: <input id="lastName" type="text" name="last_name" autocomplete="off" data-contact-form="lastName" required/></label>
    <div id="lastName-Error" class="emsg"></div>
  </p>
  <p>
    <label>Your Email: <input id="email" type="email" name="email" autocomplete="off" data-contact-form="email" required/></label>
    <div id="email-Error" class="emsg"></div>
  </p>
  <p>
    <label>Phone: <input id="phone" type="tel" name="phone" pattern="[1-9]{1}[0-9]{9}" maxlength ="10" autocomplete="off" data-contact-form="phone" required/></label>
    <div id="phone-Error" class="emsg"></div>
  </p>
  <p>
    <label>Best contact method:
      <select id="contactMethod" data-contact-form="selectMethod">
        <option selected hidden value="Choose an option">Choose an option</option>
        <option value="email">Email</option>
        <option value="phone">Phone</option>
      </select>
        <div id="contactMethod-Error" class="emsg"></div>
    </label>
  </p>
  <p>
    <label>Message: <textarea name="message" autocomplete="off" data-contact-form="message"></textarea></label>
  </p>
  <p>
    <button type="submit">Submit</button>
  </p>
</form>
